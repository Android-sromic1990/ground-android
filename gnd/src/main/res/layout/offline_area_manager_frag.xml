<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.google.android.gnd.ui.offlinearea.OfflineAreaManagerViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.gnd.ui.common.TwoLineToolbar
            android:id="@+id/offline_maps_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_dark_background"
            android:elevation="@dimen/toolbar_elevation"
            android:paddingTop="@dimen/offline_area_toolbar_padding_top"
            android:theme="@style/GreenToolbarTheme"
            app:title="@string/offline_maps" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/offline_maps_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</layout>
