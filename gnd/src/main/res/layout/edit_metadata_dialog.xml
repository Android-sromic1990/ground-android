<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <android.support.design.widget.TextInputLayout
    android:id="@+id/place_id_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/field_vertical_margin"
      android:layout_marginBottom="@dimen/field_vertical_margin"
      android:layout_marginStart="@dimen/header_field_horizontal_margin"
      android:layout_marginEnd="@dimen/header_field_horizontal_margin"
      android:layout_marginLeft="@dimen/header_field_horizontal_margin"
      android:layout_marginRight="@dimen/header_field_horizontal_margin"
      android:layout_below="@id/data_sheet_title"
      android:backgroundTint="@color/colorPrimaryLight"
      android:hint="@string/place_id"
      android:textColorHint="@color/colorPrimaryLight"
      android:visibility="gone"
      app:hintAnimationEnabled="true"
      app:hintEnabled="true"
      app:hintTextAppearance="@style/TextInputHintLight">

    <android.support.design.widget.TextInputEditText
      android:id="@+id/place_id_field"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="4dp"
        android:backgroundTint="@color/colorPrimaryLight"
        android:inputType="textNoSuggestions"
        android:singleLine="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/field_value"/>
  </android.support.design.widget.TextInputLayout>


  <android.support.design.widget.TextInputLayout
    android:id="@+id/place_caption_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/field_vertical_margin"
      android:layout_marginBottom="@dimen/field_vertical_margin"
      android:layout_marginStart="@dimen/header_field_horizontal_margin"
      android:layout_marginEnd="@dimen/header_field_horizontal_margin"
      android:layout_marginLeft="@dimen/header_field_horizontal_margin"
      android:layout_marginRight="@dimen/header_field_horizontal_margin"
    android:layout_below="@id/place_id_layout"
      android:backgroundTint="@color/colorPrimaryLight"
      android:hint="@string/place_caption"
      android:textColorHint="@color/colorPrimaryLight"
      android:visibility="gone"
      app:hintAnimationEnabled="true"
      app:hintEnabled="true"
      app:hintTextAppearance="@style/TextInputHintLight">

    <android.support.design.widget.TextInputEditText
      android:id="@+id/place_caption_field"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="4dp"
        android:backgroundTint="@color/colorPrimaryLight"
        android:inputType="textNoSuggestions"
        android:singleLine="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/field_value"
        />
  </android.support.design.widget.TextInputLayout>

</LinearLayout>
