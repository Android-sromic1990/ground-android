<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
  <FrameLayout
      android:id="@+id/record_heading_container"
      android:layout_width="match_parent"
      android:layout_height="@dimen/record_heading_height"
      android:layout_marginBottom="2dp">
    <TextView
        android:id="@+id/record_heading"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/record_status_margin_left"
        android:layout_gravity="left|center_vertical"
        android:text="Submitted X"
        android:textColor="@color/colorGrey500"
        android:textSize="@dimen/record_status_text_size"
        />
  </FrameLayout>
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_below="@id/record_heading"
      android:background="@color/colorWhite"
      app:cardCornerRadius="0dp"
      app:cardElevation="2dp"
      app:cardPreventCornerOverlap="false">
    <ImageButton
        android:id="@+id/record_menu_btn"
        android:layout_width="@dimen/menu_btn_width"
        android:layout_height="@dimen/menu_btn_height"
        android:layout_marginTop="@dimen/record_menu_btn_top"
        android:layout_marginRight="@dimen/record_menu_btn_right"
        android:layout_gravity="top|right"
        android:background="?attr/selectableItemBackground"
        android:scaleType="fitXY"
        android:src="@drawable/ic_dots"
        android:tint="@color/colorGrey600"/>
    <LinearLayout
        android:id="@+id/record_view_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/record_vertical_margin"
        android:layout_marginBottom="@dimen/record_vertical_margin"
        android:orientation="vertical">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Form content goes here."/>
    </LinearLayout>
  </android.support.v7.widget.CardView>

</LinearLayout>